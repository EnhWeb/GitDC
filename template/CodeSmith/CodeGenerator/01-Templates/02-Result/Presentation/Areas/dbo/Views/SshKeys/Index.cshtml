@model SshKeysDto

<style>
    .mat-column-userID {
        max-width: 20%;
    }
    .mat-column-keyType {
        max-width: 20%;
    }
    .mat-column-fingerprint {
        max-width: 20%;
    }
    .mat-column-publicKey {
        max-width: 20%;
    }
    .mat-column-importData {
        max-width: 20%;
    }
    .mat-column-lastUse {
        max-width: 20%;
    }
    .mat-column-operation {
        max-width: 120px;
    }
</style>

<util-toolbar>
    <util-layout>
        <util-textbox model="queryParam.keyword" placeholder="搜索" on-change="search()"></util-textbox>
    </util-layout>
    <util-layout>
        <util-a styles="Icon" tooltip="添加" link="create">
            <util-icon font-awesome-icon="Plus"></util-icon>
        </util-a>
        <util-button styles="Icon" tooltip="批量删除" on-click="delete()">
            <util-icon material-icon="Delete"></util-icon>
        </util-button>
        <util-button styles="Icon" tooltip="刷新" on-click="refresh()">
            <util-icon material-icon="Sync"></util-icon>
        </util-button>
    </util-layout>
</util-toolbar>

<util-table id="table_SshKeys" max-height="700" base-url="sshKeys" query-param="queryParam" >
    <util-table-column type="Checkbox"></util-table-column>
    <util-table-column type="LineNumber"></util-table-column>
    <util-table-column for="UserID" sort="true"></util-table-column>
    <util-table-column for="KeyType" sort="true"></util-table-column>
    <util-table-column for="Fingerprint" sort="true"></util-table-column>
    <util-table-column for="PublicKey" sort="true"></util-table-column>
    <util-table-column for="ImportData" sort="true"></util-table-column>
    <util-table-column for="LastUse" sort="true"></util-table-column>
    <util-table-column title="操作" column="operation">
        <util-table-cell>
            <util-a styles="Icon" tooltip="编辑" bind-link="['update',row.id]">
                <util-icon material-icon="Edit"></util-icon>
            </util-a>
            <util-button styles="Icon" menu-id="menu">
                <util-icon material-icon="More_Vert"></util-icon>
                <util-menu id="menu">
                    <util-menu-item label="删除" material-icon="Delete" on-click="delete(row.id)"></util-menu-item>
                    <util-menu-item label="详细" material-icon="Visibility" bind-link="['detail',row.id]"></util-menu-item>
                </util-menu>
            </util-button>
        </util-table-cell>
    </util-table-column>
</util-table>