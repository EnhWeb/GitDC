@model TeamsDto

<util-form id="form" on-submit="submit(form,btnSubmit)">
    <util-card>
        <util-card-header>
            <util-card-title>
                编辑
            </util-card-title>
        </util-card-header>
        <util-card-content>
            <util-divider inset="true" />
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="Name"></util-textbox>                
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="Description"></util-textbox>                
                </util-layout-item>
            </util-layout>
            <util-layout class="mt30">
                <util-layout-item flex="50%" offset="5%">
                    <util-textbox for="CreationDate"></util-textbox>                
                </util-layout-item>
            </util-layout>
        </util-card-content>
        <util-card-actions align="Right">
            <util-button text="返回" styles="Default" on-click="back()"></util-button>
            <util-button id="btnSubmit" type="Submit" color="Primary"></util-button>
        </util-card-actions>
    </util-card>
</util-form>